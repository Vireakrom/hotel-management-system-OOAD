        private void testFactoryPatternToolStripMenuItem_Click(object sender, EventArgs e)
        {
            // Run Factory Pattern demonstration
            string demoOutput = BLL.Factories.FactoryPatternDemo.RunDemonstration();
            
            // Create a form to display the output
            Form demoForm = new Form();
            demoForm.Text = "Factory Pattern Demonstration";
            demoForm.Size = new Size(900, 700);
            demoForm.StartPosition = FormStartPosition.CenterParent;
            
            TextBox textBox = new TextBox();
            textBox.Multiline = true;
            textBox.ScrollBars = ScrollBars.Vertical;
            textBox.Font = new Font("Consolas", 10);
            textBox.Dock = DockStyle.Fill;
            textBox.Text = demoOutput;
            textBox.ReadOnly = true;
            textBox.BackColor = Color.White;
            
            demoForm.Controls.Add(textBox);
            demoForm.ShowDialog();
        }

